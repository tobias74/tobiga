<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>tobiga UG (haftungsbeschränkt)</title>
    <link href="/static/css/main.css" rel="stylesheet" />
  </head>
  <body class="bg-white text-gray-900 flex flex-col min-h-screen">

    <!-- Header -->
    <header class="w-full py-4 border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
        <!-- Company Name (Left-Aligned) -->
        <a
          href="/static/{{lang}}/"
          class="text-lg font-light text-gray-900 hover:text-gray-600"
        >
          tobiga UG (haftungsbeschränkt)
        </a>

        <!-- Links and Language Switcher (Right-Aligned) -->
        <nav class="flex items-center space-x-4">
          <a
            href="/static/{{lang}}/imprint"
            class="text-sm text-gray-600 hover:text-gray-900"
          >{{nav-imprint}}</a>
          <a
            href="/static/{{lang}}/privacy"
            class="text-sm text-gray-600 hover:text-gray-900"
          >{{nav-privacy}}</a>

          <!-- Language Dropdown -->
          <div class="relative group">
            <!-- Dropdown Button with Globe Icon -->
            <button
              class="text-sm text-gray-600 hover:text-gray-900 focus:outline-none"
              aria-label="Change language"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418"
                />
              </svg>
            </button>

            <!-- Dropdown Menu (hidden by default) -->
            <div
              class="absolute right-0 mt-2 w-32 bg-white border border-gray-300 rounded-md shadow-lg opacity-0 group-focus-within:opacity-100 group-focus-within:pointer-events-auto pointer-events-none transition-opacity duration-200"
            >
              <a
                href="/static/en/{{currentPage}}"
                class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
              >English</a>
              <a
                href="/static/de/{{currentPage}}"
                class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
              >Deutsch</a>
            </div>
          </div>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow max-w-7xl mx-auto px-4 py-8">
      {{{body}}}
    </main>

    <!-- Sticky Footer -->
    <footer class="w-full py-4 border-t border-gray-200">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <p class="text-sm text-gray-500">© 2024 tobiga UG (haftungsbeschränkt)</p>
      </div>
    </footer>

  </body>
</html>